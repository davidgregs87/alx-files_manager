{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base", "eslint:recommended", "plugin:import/errors", "plugin:import/warnings"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["error", "ignorePackages"],
        "max-len": ["error", { "code": 80 }],
        "no-console": "off"
    }
}